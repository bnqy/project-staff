@model project_staff.Shared.DTOs.ProjectTaskDto

@section Styles {
    <link rel="stylesheet" type="text/css" href="~/css/projectdetails.css?v=@DateTime.Now.Ticks" />
}

@{
    ViewData["Title"] = "Task Details";
    Guid projectId = (Guid)ViewBag.ProjectId;
}

<div class="full-height-container mt-4">
    <div class="content-wrapper">
        <div class="row row-full-height">
            <div class="col-12 col-full-height">
                <h2>Task Details</h2>
                <hr />
                <p><strong>Name:</strong> @Model.Name</p>
                <p><strong>Comment:</strong> @Model.Comment</p>
                <p><strong>Status:</strong> @Model.Status</p>
                <p><strong>Priority:</strong> @Model.Priority</p>
                @* <p><strong>Customer Company:</strong> @Model.CustomerCompany</p>
                <p><strong>Execution Company:</strong> @Model.ExecutionCompany</p>
                <p><strong>Priority:</strong> @Model.Priority</p>
                <p><strong>Start Date:</strong> @Model.StartDate.ToString("dd MMM yyyy")</p>
                @if (Model.EndDate != null)
                {
                    <p><strong>End Date:</strong> @Model.EndDate.ToString("dd MMM yyyy")</p>
                }
                <hr /> *@
         
                <div>
                   @*  <a asp-controller="Tasks" asp-action="Edit" asp-route-projectId="@projectId" asp-route-taskId="@Model.Id" class="btn update-btn mt-1 mb-1">Update Task</a> *@
                    <a href="@Url.Action("Edit", "Tasks", new { taskId = Model.Id, projectId = projectId})" class="btn btn-details">Update Task</a>
                </div>
                <hr />
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    @Html.ActionLink("Back to List", "Index", "Projects", null, new { @class = "btn btn-secondary" })
</div>
