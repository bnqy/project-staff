@{
    ViewData["Title"] = "Welcome to Projectto App";
}
@section Styles {
    <link rel="stylesheet" type="text/css" href="~/css/landpage.css?v=@DateTime.Now.Ticks" />
}

<div class="landing-page">
    <section class="hero-section text-center">
        <h1 class="display-4">Manage risks, ensure success</h1>
        <p class="lead">Work smarter, not harder, with better planning.</p>
        <div class="cta-buttons">
            <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg">Get Started</a>
            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-lg">Login</a>
        </div>
    </section>

    <section class="features-section">
        <div class="row">
            <div class="col-md-4">
                <div class="feature-item">
                    <ion-icon name="list-outline" class="feature-icon"></ion-icon>
                    <h3>Build & Organize</h3>
                    <p>Easily add and categorize your projects.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-item">
                    <ion-icon name="time-outline" class="feature-icon"></ion-icon>
                    <h3>Define and prioritize</h3>
                    <p>Prioritize what truly matters to you.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-item">
                    <ion-icon name="checkmark-done-outline" class="feature-icon"></ion-icon>
                    <h3>Monitor and measure progress</h3>
                    <p>Watch your productivity grow over time.</p>
                </div>
            </div>
        </div>
    </section>
</div>