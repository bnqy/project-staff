@model project_staff.Shared.DTOs.ProjectDto

@section Styles {
    <link rel="stylesheet" type="text/css" href="~/css/projectdetails.css?v=@DateTime.Now.Ticks" />
}

@{
    ViewData["Title"] = "Project Details";
}

<div class="full-height-container mt-4">
    <div class="content-wrapper">
        <div class="row row-full-height">
            <div class="col-12 col-full-height">
                <h2>@Model.Name</h2>
                <hr />
                <p><strong>Customer Company:</strong> @Model.CustomerCompany</p>
                <p><strong>Execution Company:</strong> @Model.ExecutionCompany</p>
                <p><strong>Priority:</strong> @Model.Priority</p>
                <p><strong>Start Date:</strong> @Model.StartDate.ToString("dd MMM yyyy")</p>
                @if (Model.EndDate != null)
                {
                    <p><strong>End Date:</strong> @Model.EndDate.ToString("dd MMM yyyy")</p>
                }
                <hr />
                <div>
                    <a asp-controller="Projects" asp-action="Edit" asp-route-id="@Model.Id" class="btn update-btn mt-1 mb-1">Update Project</a>
                </div>
                <hr />
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    @Html.ActionLink("Back to List", "Index", "Projects", null, new { @class = "btn btn-secondary" })
</div>
